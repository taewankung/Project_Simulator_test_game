#:kivy 1.0
<RoomController>:
    BoxLayout:
        padding: 5
        orientation: 'vertical'
        StackLayout:
            orientation: 'tb-lr'
            StackLayout:
                orientation: 'lr-tb'
                Label:
                    id: room_name
                    text:'room_name: '
                    size_hint_x:1
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                Label:
                    text:'Select_hero'
                    size_hint_x:0.25
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                TextInput:
                    id: hero_name1
                    text:"pepo"
                    size_hint_x:0.25
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                Button:
                    id: select
                    text: "Select"
                    size_hint_x:0.30
                    size_hint_y:None
                    size:(200,50)
                    on_press:root.manager.client_game.room.select_hero(hero_name1.text)
                Button:
                    id: browser_code_button
                    text: "Browse"
                    size_hint:(0.25,None)
                    size:(200,50)
                    on_press: root.on_browse('client1')
                TextInput:
                    id: file_client1
                    text:"sim_monitor/sim_client/test.py"
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                Button:
                    id: run_client1
                    text: "Run client1"
                    size_hint_x:0.25
                    size_hint_y:None
                    size:(150,50)
                    font_size: 20
                    on_press: root.run_client1()
                Label:
                    id: host_label
                    text: 'Host:'
                    size_hint_x:0.25
                    size_hint_y:None
                    font_size: 20
                    size:(200,50)
                TextInput:
                    id: host
                    text:"localhost"
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size: 20
                    size:(200,50)
