#:kivy 1.0
<RoomController>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source:'./run_naga/widgets/res/backgroundkivy.png'
    BoxLayout:
        padding: 50
        orientation: 'vertical'
        StackLayout:
            orientation: 'tb-lr'
            StackLayout:
                orientation: 'lr-tb'

                Label:
                    id: room_name
                    markup:True
                    text:'[b]Room name: [/b]'
                    size_hint_x:1
                    size_hint_y:None
                    font_size:40
                    size:(200,50)
                Label:
                    markup: True
                    text:'[b][color=#556b2f]Hero Select[/color][/b]'
                    size_hint_x:1
                    size_hint_y:None
                    font_size:30
                    size:(200,50)
                Label:
                    id:current_player_number
                    markup:True
                    text:'[b]Current Player in room:0[/b]'
                    size_hint_x:1
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                Button:
                    id: apaimanee
                    markup:True
                    text: "Apaimanee"
                    background_normal:'./run_naga/widgets/res/buttonkivy3.png'
                    size_hint_x:0.25
                    size_hint_y:None
                    size:(200,35)
                    font_size: 18
                    on_press:root.on_select_hero(apaimanee.text)
                Button:
                    id: aussaren
                    markup:True
                    text: "Aussaren"
                    background_normal:'./run_naga/widgets/res/buttonkivy3.png'
