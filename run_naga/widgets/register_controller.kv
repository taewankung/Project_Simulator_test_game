#:kivy 1.0
<RegisterController>:
    BoxLayout:
        padding: 5
        orientation: 'vertical'
        StackLayout:
            orientation: 'tb-lr'
            StackLayout:
                orientation: 'lr-tb'
                Label:
                    text:'Firstname'
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                TextInput:
                    id: firstname
                    text:"client1"
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                Label:
                    text:'lastname'
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                TextInput:
                    id: lastname
                    text:"client1"
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                Label:
                    text:'username'
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                TextInput:
                    id: username
                    text:"client1"
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                Label:
                    text:'Password'
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                TextInput:
                    id: password
                    text:"client1"
                    password:True
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                Label:
                    text:'Email'
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                TextInput:
                    id: email
                    text:"testing@local.com"
                    size_hint_x:0.5
                    size_hint_y:None
                    font_size:20
                    size:(200,50)
                Button:
                    id: register
                    text: "Register"
                    size_hint_x:0.30
                    size_hint_y:None
                    size:(200,50)
                    on_press: root.on_register_user(username.text,password.text,email.text,firstname.text,lastname.text)
                Button:
                    id: back
                    text: "Back"
                    size_hint_x:0.30
                    size_hint_y:None
                    size:(200,50)
                    on_press: root.on_back()
                Button:
                    id: quit
                    text: "Quit"
                    size_hint_x:0.30
                    size_hint_y:None
                    size:(200,50)
                    on_press: app.stop()
